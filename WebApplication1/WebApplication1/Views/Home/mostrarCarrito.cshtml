
@{
    ViewBag.Title = "mostrarCarrito";
}

<h2>Su Pedido</h2>
<div>
    <table class="table">
        <tr>
            <td>Nombre</td>
            <td>Precio</td>
            <td>Cantidad</td>
            <th> Total</th>
        </tr>
        @{
            double total = 0;
        }
        @if (Session["Carrito"] != null)
        {
            foreach (var item in Session["Carrito"] as List<WebApplication1.Models.ViewModels.CarritoViewModels>)
            {
                <tr>
                    <td>@item.Producto.nombre</td>
                    <td>@item.Producto.precio</td>
                    <td>@item.Cantidad</td>
                    <td> @(item.Cantidad * item.Producto.precio)</td>
                    <td>@Html.ActionLink("Eliminar", "Delete", "Home", new {id=item.Producto.id},null)</td>
                </tr>
                total += (double)(item.Cantidad * item.Producto.precio);
            }
        }
        <tfoot>
            <tr>
                <th colspan="4">Total</th>
                <th>@total</th>
            </tr>
        </tfoot>
    </table>
    @Html.ActionLink("Seguir Comprando", "Index", "Home", null, null)
</div>