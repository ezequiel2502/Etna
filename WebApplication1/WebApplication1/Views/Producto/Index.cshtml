@model List<WebApplication1.Models.ViewModels.ListProductoViewModels>
@{
    ViewBag.Title = "Producto";
}

<h2>@ViewBag.Title</h2>

<div clss="row" style="text-align:right;padding:5px">
    <a href="~/Producto/Nuevo" class="btn btn-primary">Nuevo</a>
</div>
<div class=" row">
    <div class=" col-md-12">
        <table class="table">
            <tr>
                <td>Id</td>
                <td>Nombre</td>
                <td>Descripción</td>
                <td>Precio</td>
                <th> Acciones </th>
            </tr>
            @foreach (var oElemento in Model)
            {
                <tr>
                    <td>@oElemento.id</td>
                    <td>@oElemento.nombre</td>
                    <td>@oElemento.descripcion</td>
                    <td>@oElemento.precio</td>
                    <td>
                        <a class="btn btn-default" href="~/Producto/Editar/@oElemento.id ">Editar</a>
                        <a class="btn btn-danger" href="~/Producto/Eliminar/ @oElemento.id ">Eliminar</a>
                    </td>
                </tr>
            }
        </table>
        
    </div>
</div>